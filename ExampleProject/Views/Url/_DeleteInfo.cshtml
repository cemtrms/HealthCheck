@model DeleteMonitoringTask
<div class="modal-content">

    <div class="modal-header bg-danger">
        <h2 class="modal-title  ">Warning</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <form asp-action="DeleteTask"  method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="modal-body form-horizontal">
          
                @Html.HiddenFor(model => Model.MonitoringId)
                @Html.HiddenFor(model => Model.RecurringJobId)
            
            <div class="bg-warning">
                @Html.Label(Model.Message)
            </div>
        </div>

        <!--Modal Footer Start-->
        <div class="modal-footer">
            <button data-dismiss="modal" id="No" class="btn btn-default" type="button">No</button>
            <button class="btn btn-success relative" id="btnSubmit" type="submit">
                <i class="loader"></i>
                Yes
            </button>
        </div>
    </form>

</div>


